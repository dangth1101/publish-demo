{
  "name": "publish-demo",
  "version": "1.0.1",
  "description": "A demo for publishing package",
  "keywords": [
    "publish",
    "demo"
  ],
  "homepage": "https://github.com/dangth1101/publish-demo",
  "bugs": {
    "url": "https://github.com/dangth1101/publish-demo/issues"
  },
  "author": "CapCap <dangth.hcm.it@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dangth1101/publish-demo.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@changesets/cli": "^2.29.4",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "scripts": {
    "build": "tsup",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "lint": "tsc",
    "test": "vitest run",
    "dev": "vitest",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run lint && npm run test"
  },
  "main": "dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  }
}
